{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "lib": ["dom", "es6", "es2016", "es2015.promise", "es2017.object"],
        "outDir": "./src/",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "removeComments": false,
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es5",
        "jsx": "react"
    },
    "exclude": ["node_modules"]
}